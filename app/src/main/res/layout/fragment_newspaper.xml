<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <HorizontalScrollView
        android:id="@+id/btn_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:elevation="3dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_politics"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:text="정치"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_economy"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:text="경제"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_society"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:text="사회"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_life"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:text="생활"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_culture"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:text="문화"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_it"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:text="IT"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_science"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:text="과학"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_world"
                android:fontFamily="@font/nanum_sqaure_bold"
                android:textSize="20sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_newspaper"
                android:text="세계"/>

        </LinearLayout>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_newspaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</androidx.constraintlayout.widget.ConstraintLayout>