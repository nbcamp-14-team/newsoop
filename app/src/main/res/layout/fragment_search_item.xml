<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="5dp"
    android:background="@drawable/iv_home"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/card_view1"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/search_title"
        android:text="테스트용 문구"
        android:textSize="17sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:padding="5dp"
        app:layout_goneMarginStart="10dp"
        android:lineSpacingExtra="10dp"
        android:fontFamily="@font/nanum_sqaure_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_view1"
        app:layout_constraintTop_toTopOf="parent"/>
    <!--    <TextView-->
    <!--        android:id="@+id/author"-->
    <!--        android:text="테스트용 문구"-->
    <!--        android:textSize="16sp"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="8dp"-->

    <!--        app:layout_constraintStart_toEndOf="@id/cv_thumbnail"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/pub_date"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/title"/>-->
    <TextView
        android:id="@+id/search_date"
        android:text="테스트용 문구"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="5dp"
        android:layout_marginBottom="15dp"
        app:layout_goneMarginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/card_view1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/search_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/search_title"
        app:layout_constraintTop_toTopOf="@+id/search_date"
        app:srcCompat="@drawable/ic_like" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1DCDC"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>